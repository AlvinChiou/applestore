<div class="row">
  <div class="col-md-12">
    <% if render_cart_items_count(current_cart) > 0 %>
        <%= link_to("清空購物車", clean_carts_path,
                    method: :delete, class: "btn btn-primary pull-right",
                    data: {confirm: "你確定要清空整個購物車嗎？"}) %>
    <% end %>

    <h2>購物車</h2>
    <table class="table table-hover">
      <thead>
      <tr>
        <th colspan="2">商品資訊</th>
        <th>單價</th>
        <th>數量</th>
        <th>小計</th>
        <th>變更明細</th>
      </tr>
      </thead>

      <tbody>
      <% current_cart.items.each do |product| %>
          <tr>
            <td>
              <%= link_to product_path(product) do %>
                  <%= show_product_photo(product) %>
              <% end %>
            </td>
            <td>
              <%= link_to(product.title, product_path(product)) %>
            </td>
            <td>
              <%= product.price %>
            </td>

            <td>
              <% item = current_cart.find_cart_item(product) %>
              <%= form_for item, url: item_path(product) do |f| %>
                  <%= f.select :quantity, 1..product.quantity %>
                  <%= f.submit "變更", data: {disable_with: "Submitting..."} %>
              <% end %>
            </td>

            <td>
              <%= multiplied_by(product.price, item.quantity) %>
            </td>

            <td>
              <%= link_to item_path(product), mehtod: :delete do %>
                  <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
      <% end %>

      </tbody>
    </table>

    <br>

    <div class="total clearfix">
      <span class="pull-right">
         <span> 購物車內總共有<%= current_cart.items.count %>項商品，總計 <%= render_cart_total_price(current_cart) %> NTD  </span>
      </span>
    </div>

    <hr>
    <div class="checkout clearfix">
      <%= link_to("確認結賬", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>

  </div>
</div>