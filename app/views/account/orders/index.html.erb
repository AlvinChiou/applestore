<h2>訂單列表</h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th>訂單編號</th>
    <th>建立時間</th>
    <th>付款方式</th>
    <th>訂單狀態</th>
    <th>訂單明細</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.id %>
        </td>
        <td>
          <%= order.created_at.to_s(:long) %>
        </td>
        <td>
          <%= order.payment_method %>
        </td>
        <td>
          <%= render_order_state(order) %>
        </td>
        <td>
          <%= link_to("詳閱明細", order_path(order.token)) %>
        </td>
      </tr>
  <% end %>

  </tbody>
  <tbody></tbody>
</table>