<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>登入/註冊</b> <span class="caret"></span></a>
  <ul id="login-dp" class="dropdown-menu">
    <li>
      <div class="row">
        <div class="col-md-12">
          <div class="social-buttons">
            <%= link_to('<i class="fa fa-facebook"></i> Facebook'.html_safe, Settings.domain + user_omniauth_authorize_path(:facebook), class: "btn btn-fb") %>

            <a href="#" class="btn btn-line"><i class="fa fa-twitter"></i>與LINE連動</a>
          </div>
          <span align="center"><p>或</p></span>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), id: "login-nav") do |f| %>

              <div class="form-group">

                <%= f.input_field :email, required: true, autofocus: true, class: "form-control", placeholder: "電子郵件" %>
              </div>
              <div class="form-group">
                <%= f.input_field :password, required: true, class: "form-control", placeholder:"密碼" %>
                <div class="help-block text-right"><%= link_to "忘記密碼?", new_password_path(resource_name) %></div>
              </div>
              <div class="form-group">
                <%= button_tag(type: 'submit', class: "btn btn-danger btn-block") do %>
                    <i class="fa fa-sign-in"></i> 登入
                <% end %>
              </div>
              <div class="checkbox">
                  <%= f.input :remember_me, label:"保持登入", as: :boolean if devise_mapping.rememberable? %>
              </div>
          <% end %>

        </div>
        <div class="bottom text-center">
          第一次來嗎 ? <b><%= link_to "成為我們的會員", new_registration_path(resource_name) %></b>
        </div>
      </div>
    </li>
  </ul>
</li>