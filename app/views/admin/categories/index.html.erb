<h2>商品分類列表</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("建立商品分類", new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>

<table class="table table-hover">
  <thead>
  <tr>
    <th>分類代碼</th>
    <th>分類名稱</th>
    <th>使用狀態</th>
    <th>編輯狀態</th>
    <th>功能</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.id %>
        </td>
        <td>
          <%= category.name %>
        </td>
        <td>
          <%= show_category_enable_status(category) %>
        </td>
        <td>
          <%= link_to("編輯", edit_admin_category_path(category), class: "btn btn-warning btn-sm") %>
        </td>
        <td>
          <%= show_modify_category_status_button(category) %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="column" align="center">
  <%= will_paginate(@categories) %>
</div>