<h2>變更您的密碼</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "新的密碼", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "再輸入一次密碼", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "變更密碼", class:"btn btn-danger" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
