<div class="col-md-4 col-md-offset-4">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">成為我們的會員</h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, label: "電子郵件", wrapper: :vertical_input_group do %>
                <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                <%= f.input_field :email, required: true, autofocus: true, class: "form-control" %>
            <% end %>
            <%= f.input :password, label: "密碼", wrapper: :vertical_input_group do %>
                <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                <%= f.input_field :password, required: true, hint: ("密碼至少#{@minimum_password_length}個字元" if @minimum_password_length), class: "form-control"  %>
            <% end %>
            <%= f.input :password, label: "再輸入一次密碼", wrapper: :vertical_input_group do %>
                <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                <%= f.input_field :password_confirmation, required: true, class: "form-control"  %>
            <% end %>
          </div>

          <div class="form-actions">
            <%= button_tag(type: 'submit', class: "btn btn-danger col-xs-12") do %>
                <i class="fa fa-user-plus"></i> 註冊
            <% end %>

            <%= link_to('<i class="fa fa-facebook-square"></i> 登入'.html_safe, Settings.domain + user_omniauth_authorize_path(:facebook), class: "btn btn-primary col-xs-12 facebook-login") %>
          </div>
      <% end %>
    </div>
  </div>



  <%= render "devise/shared/links" %>
</div>