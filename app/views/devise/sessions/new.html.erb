<div class="col-md-4 col-md-offset-4">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">請登入</h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: "電子郵件", wrapper: :vertical_input_group do %>
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.input_field :email, required: false, autofocus: true, class: "form-control" %>
            <% end %>
            <%= f.input :password, label: "密碼", wrapper: :vertical_input_group do %>
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.input_field :password, required: false, class: "form-control" %>
            <% end %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= button_tag(type: 'submit', class: "btn btn-warning col-xs-12") do %>
                <i class="fa fa-sign-in"></i> 登入
            <% end %>

            <%= link_to('<i class="fa fa-facebook-square"></i> 登入'.html_safe, Settings.domain + user_omniauth_authorize_path(:facebook), class: "btn btn-primary col-xs-12 facebook-login") %>
          </div>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>