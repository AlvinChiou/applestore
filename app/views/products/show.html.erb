<div class="row">
  <div class="col-md-6">
    <%= image_tag(@product.photo.image.medium.url, class: "thumbnail") %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <div style="height:100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div>數量：<%= @product.quantity %> </div>
    <div class="product-price">NTD <%= @product.price %></div>
    <div class="pull-right">
      <% if @product.quantity > 0 %>
          <%= link_to("加入購物車", "#", :class => "btn btn-primary btn-lg btn-danger") %>
      <% else %>
          <%= link_to("上架通知我", "#", :class => "btn btn-primary btn-lg btn-warning") %>
    <% end %>
    </div>
  </div>
</div>