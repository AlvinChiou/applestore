<div class="row">
  <% @products.each do |product| %>
      <div class="col-xs-6 col-md-4">
        <div class="thumbnail">
          <%= link_to product_path(product) do %>
              <%= show_product_photo(product) %>
          <% end %>
          <div class="caption" align="center">
            <h3><%= link_to(product.title, product_path(product)) %></h3>
            <% if product.original_price > product.price %>
                <div class="product-original-price-index">
                  <%= product.original_price %> NTD
                </div>
            <% else %>
                <div>
                  <%= show_product_quantity(product) %>
                </div>
            <% end %>
            <div class="product-price-at-index">
              <%= product.price %> NTD
            </div>
            <p>
              <%= button_status_by_product(product) %>
            </p>
          </div>
        </div>
      </div>
  <% end %>
</div>
