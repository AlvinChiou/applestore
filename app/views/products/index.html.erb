<div class="row">
  <% @products.each do |product| %>
      <div class="col-xs-6 col-md-4">
        <div class="thumbnail">
          <%= link_to product_path(product) do %>
              <%= show_product_photo(product) %>
          <% end %>
          <div class="caption" align="center">
            <h3><%= link_to(product.title, product_path(product)) %></h3>
            <% if product.original_quantity > product.quantity && product.original_quantity > 0 %>
                <div>
                  <%= show_original_quantity_at_index(product) %>
                </div>
            <% else %>
                <div>
                  <%= "剩餘：#{product.quantity}" %>
                </div>
            <% end %>
            <div class="product-price-at-index">
              <%= product.price %> NTD
            </div>
            <p>
              <%= button_status_by_product(product) %>
            </p>
          </div>
        </div>
      </div>
  <% end %>
</div>
<div class="column" align="center">
  <%= will_paginate(@products) %>
</div>
